@page
@model ChefInternational.Pages.Recipes.IndexModel

@{
    ViewData["Title"] = "My recipes";
}

<h1>My recipes</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].IngredientLines)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].RecipeUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].HealthLabels)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Recipe) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientLines)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HealthLabels)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
